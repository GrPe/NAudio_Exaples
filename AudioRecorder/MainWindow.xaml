<Window x:Class="AudioRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioRecorder"
        mc:Ignorable="d"
        Title="Audio Recorder" Height="160" Width="300" ResizeMode="CanMinimize">
    <Grid>
        <Button Name="RecordButton" Content="Start" HorizontalAlignment="Left" Margin="80,60,0,0" VerticalAlignment="Top" Width="75" Click="RecordButton_Click"/>
        <Label Name="TimeDisplayer" Content="00:00:00" HorizontalAlignment="Left" Margin="155,42,37,32" VerticalAlignment="Top" Width="102" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="57"/>
    </Grid>
</Window>
